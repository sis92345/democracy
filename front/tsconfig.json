{
  // https://v3.nuxtjs.org/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES5",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "~/*": ["./*"],
      "~*": ["./*"],
      "@/*": ["./*"]
    }
  }
}
